# Kein Rewrite hier – diese Datei bleibt isoliert von /app/
RewriteEngine Off

# Zugriffsschutz für log-visitor.php
<Files "log-visitor.php">
    Require all granted
</Files>
# visits.csv gezielt freigeben
<Files "visits.csv">
    Require all granted
</Files>

# Alle anderen sensiblen Dateien weiterhin sperren – aber ohne visits.csv
<FilesMatch "\.(ini|bak|log|sh|sql)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>
